---
import IconArrow from "../assets/icons/IconArrow.astro";

const { url, repositorio } = Astro.props;
---

<section
    class="sectionHover col-span-12 row-span-2 md:col-span-7 border-l-blue-200 dark:border-l-blue-500 border-l-4 rounded-lg border p-6 border-zinc-700 transition-transform bg-zinc-700 bg-opacity-50 dark:bg-white dark:bg-opacity-30 dark:border-black/10 dark:shadow-md"
>
    <div class="w-full flex justify-between items-center mb-5">
        <span class="block bg-blue-200 dark:bg-blue-300 w-5 h-5 rounded-full">
        </span>
        <span
            class="block w-max rounded-full bg-blue-200 dark:bg-blue-300 dark:text-zinc-800 text-black font-bold px-4 py-[2px] text-base"
            >Ultimo proyecto</span
        >
    </div>

    <h2 class="text-2xl font-bold mb-1 text-blue-50 dark:text-blue-800">
        Web - Dafa Seguros
    </h2>
    <p class="text-xl text-zinc-400 dark:text-zinc-700">
        Desarrollo de p√°gina web informativa para una empresa Productora Asesora
        de Seguros.
    </p>

    <footer class="flex gap-5 text-lg items-center dark:text-black">
        <slot name="buttonPrimary" />
    </footer>

    <script data-astro-rerun type="module">
        const hoverSections = document.querySelectorAll(".sectionHover");
        const activeLinks = document.querySelectorAll(".linkHover");

        hoverSections.forEach((section) => {
            activeLinks.forEach((link) => {
                link.addEventListener("mouseover", () => {
                    section.classList.remove("bg-zinc-700");
                    section.classList.remove("dark:bg-white");
                    section.classList.add("bg-blue-200/20");
                    section.classList.add("scale-[1.02]");
                });
            });
        });

        hoverSections.forEach((section) => {
            activeLinks.forEach((link) => {
                link.addEventListener("mouseout", () => {
                    section.classList.remove("bg-blue-200/20");
                    section.classList.remove("scale-[1.02]");
                    section.classList.add("bg-zinc-700");
                    section.classList.add("dark:bg-white");
                });
            });
        });
    </script>
</section>
