---
const { title, description } = Astro.props;
---

<div
  class="w-full h-[340px] 2xl:h-[360px] xl:h-[360px] lg:h-[320px] relative z-10 border-2"
>
  <span
    class="bg-black w-full h-full flex flex-col p-8 absolute border-2 -top-6 right-6 xl:-top-4 xl:right-4"
  >
    <header class="w-full flex flex-col mb-8 flex-grow">
      <h3 class="text-3xl mb-4 font-bold">{title}</h3>
      <ul class="flex gap-2 mb-4">
        <slot name="icons" />
      </ul>
      <p class="max-w-full w-[58ch] text-pretty mb-3 text-xl">
        {description}
      </p>
    </header>

    <footer class="">
      <slot name="buttons" />
    </footer>
  </span>
</div>
